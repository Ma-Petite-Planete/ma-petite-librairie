{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "declaration": true, // Génère les fichiers .d.ts
    "outDir": "dist", // Génère la sortie dans le dossier dist
    "jsx": "react", // Pour support JSX
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}